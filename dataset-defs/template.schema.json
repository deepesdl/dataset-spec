{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "type",
        "properties",
        "geometry"
    ],
    "additionalProperties": false,
    "properties": {
        "type": {
            "type": "string",
            "enum": ["Feature"]
        },
        "properties": {
            "type": "object",
            "required": [
                "title",
                "data_id",
                "description",
                "time_range",
                "time_period",
                "spatial_ref",
                "spatial_bbox",
                "spatial_res",
                "variables"
            ],
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "description": "the title of the dataset",
                    "examples": [
                        "Ocean Products in the Mediterranean Sea"
                    ]
                },
                "data_id": {
                    "type": "string",
                    "description": "a unique dataset identifier",
                    "examples": [
                        "OC-CMEMS-MED-005-2005-2022-1d-v1.zarr"
                    ]
                },
                "description": {
                    "type": "string",
                    "description": "a description of the dataset",
                    "examples": [
                        "CMEMS Ocean Colour for Mediterranean Sea, 2005-2022"
                    ]
                },
                "time_range": {
                    "type": "array",
                    "prefixItems": [
                        {"type":  "string", "format": "date"},
                        {"type":  "string", "format": "date"}
                    ],
                    "items": false,
                    "description": "temporal coverage of the data",
                    "examples": [
                        ["2005-05-01", "2022-05-01"]
                    ]
                },
                "time_period": {
                    "type": "string",
                    "examples": ["1D", "2D", "8D", "10D", "2W", "1M"]
                },
                "spatial_ref": {
                    "type": "string",
                    "description": "spatial coordinate reference system",
                    "examples": [
                        "WGS84", "CRS84", "EPSG:3035", "EPSG:4326"
                    ],
                    "default": "CRS84"
                },
                "spatial_bbox": {
                    "type": "array",
                    "description": "spatial coverage of the data in units of the spatial coordinate reference system",
                    "prefixItems": [
                        {"type":  "number", "description": "minimum x-coordinate"},
                        {"type":  "number", "description": "minimum y-coordinate"},
                        {"type":  "number", "description": "maximum x-coordinate"},
                        {"type":  "number", "description": "maximum y-coordinate"}
                    ],
                    "items": false
                },
                "spatial_res": {
                    "type": [
                        "array",
                        "number"
                    ],
                    "prefixItems": [
                        {
                            "type": "number",
                            "exclusiveMinimum": 0.0
                        },
                        {
                            "type": "number",
                            "exclusiveMinimum": 0.0
                        }
                    ],
                    "items": false,
                    "exclusiveMinimum": 0.0,
                    "description": "spatial resolution in units of the spatial coordinate reference system",
                    "examples": [0.05, 10, 300]
                },
                "metadata": {
                    "type": "object"
                },
                "variables": {
                    "type": "array",
                    "description": "the data variables provided by this dataset",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "long_name",
                            "units",
                            "valid_min",
                            "valid_max",
                            "time_range",
                            "dtype",
                            "dims",
                            "sources"
                        ],
                        "properties": {
                            "name": {"type": "string"},
                            "long_name": {"type": "string"},
                            "units": {"type": "string"},
                            "valid_min": {"type": "number"},
                            "valid_max": {"type": "number"},
                            "time_range": {
                                "type": "array",
                                "prefixItems": [
                                    {"type":  "string", "format": "date"},
                                    {"type":  "string", "format": "date"}
                                ],
                                "description": "temporal coverage of the data",
                                "examples": [
                                    ["2005-05-01", "2022-05-01"]
                                ],
                                "items": false
                            },
                            "dtype": {"type": "string"},
                            "dims": {
                                "type": "array",
                                "items": {"type": "string"},
                                "examples": [
                                  ["time", "y", "x"],
                                  ["time", "lat", "lon"]
                                ]
                            },
                             "sources": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "additionalProperties": true,
                                    "required": [
                                        "data_url",
                                        "license_url"
                                    ],
                                    "properties": {
                                        "home_url": {
                                            "type": "string",
                                            "format": "uri",
                                            "examples": [
                                                ["https://resources.marine.copernicus.eu/"]
                                            ]
                                        },
                                        "data_url": {
                                            "type": "string",
                                            "format": "uri",
                                            "examples": [
                                                ["https://resources.marine.copernicus.eu/"]
                                            ]
                                        },
                                        "license_url": {
                                            "type": "string",
                                            "format": "uri",
                                            "examples": [
                                                ["https://marine.copernicus.eu/user-corner/service-commitments-and-licence"]
                                            ]
                                        },
                                        "attributions": {
                                            "type": "array",
                                            "items": {"type":  "string"}
                                        },
                                        "processing_steps": {
                                            "type": "array",
                                            "description": "processing steps to be applied to the source",
                                            "items": {"type":  "string"},
                                            "examples": [
                                                [
                                                    "Masking out low quality pixels",
                                                    "Temporal NaN-mean aggregation",
                                                    "Spatial bi-cubic interpolation"
                                                ]
                                            ]
                                        },
                                        "remarks": {
                                            "type": "string"
                                        }
                                    }
                                }
                             },
                             "color_bar_name": {
                                 "type": "string",
                                 "description": "name of a matplotlib colormap: https://matplotlib.org/stable/tutorials/colors/colormaps.html",
                                 "examples": [
                                     ["viridis_r", "turbo", "prism", "Spectral"]
                                 ]
                             },
                             "color_value_min": {
                                 "type": "number",
                                 "description": "minimum value for colour scale",
                                 "examples": [-10500, 0, 1.735e-9, 4.5e6]
                             },
                             "color_value_max": {
                                 "type": "number",
                                 "description": "maximum value for colour scale",
                                 "examples": [-9500, 0, 2.978e-9, 8.5e6]
                             },
                             "metadata": {
                                 "type": "object"
                            }
                        }
                    }
                }
            }
        },
        "geometry": {
            "type": "object",
            "description": "the dataset coverage polygon in CRS-84 (longitude, latitude) units",
            "required": [
                "type",
                "coordinates"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["Polygon", "MultiPolygon"]
                },
                "coordinates": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "prefixItems": [
                               {"type": "number"},
                               {"type": "number"}
                            ],
                            "items": false
                        },
                        "minItems": 3
                    },
                    "minItems": 1
                }
            }
        }
    }
}
